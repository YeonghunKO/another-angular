{
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "rules": {
    "no-var": "error", // var 금지
    "no-console": ["off", { "allow": ["warn", "error", "info"] }], // console.log() 금지
    "curly": "error",
    "no-undef": "error"
  }
}
